<?php
/**
 * @param int $int
 * @param string $string
 */
function defaultVAlues($int = 1, $string = "cadena")
{
    echo "$int\n";
    echo "$string\n";
}

defaultVAlues();

defaultVAlues(5,"sobre escribir valores" );

function myFunxtionTypeError(string $param1): int
{
    echo $param1;
    return 1;
}

myFunxtionTypeError("string prueba error");


function functionVarialesTipoVars (int  ...$myArray)
