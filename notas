FUNCTIONS

<?php
    //funciones
    function mostrarItem($key,$value)
    {
        return "<li>$key => $value</li>";
    }
?>

<ul>
<?php
    $arr = array(
        "1"=>"uno",
        "2"=>"dos",
        "3"=>"tres",
        "4"=>"cuatro"
    );


    foreach ($arr as $key => $value):
           echo mostrarItem($key,$value);
        endforeach;
?>
</ul>


