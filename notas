    echo json_encode($myArray);
}
functionVarialesTipoVars(1,"dos","tres","cuatro",false);


function factorial(int $n):int
{
    if(n==1)
        return 1;
    else
        return Sn * factorial($n-1);
}
    $result = factorial(3);
echo $result;
